<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="mrp_default_locations_settings_form" model="ir.ui.view">
      <field name="name">mrp_default_locations.settings.form</field>
      <field name="model">mrp_default_locations.settings</field>
      <field name="arch" type="xml">
        <form string="MRP Default Locations Settings" class="oe_form_configuration">
          <header>
            <button string="Save" type="object" name="execute" class="oe_highlight"/>
            or
            <button string="Cancel" type="object" name="cancel" class="oe_link"/>
          </header>
          <sheet>
            <label for="default_location_src_id" string="Default source location"/>
            <field name="default_location_src_id"/>
            <label for="default_location_dest_id" string="Default destination location"/>
            <field name="default_location_dest_id"/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="mrp_default_locations_settings_action" model="ir.actions.act_window">
      <field name="name">mrp_default_locations.settings.action</field>
      <field name="res_model">mrp_default_locations.settings</field>
      <field name="view_mode">form</field>
    </record>

    <menuitem
      id="mrp_default_locations_settings_menu"
      name="MRP Default Locations"
      parent="base.menu_config"
      action="mrp_default_locations_settings_action"/>
  </data>
</openerp>
